<div style="margin: auto; width: 50%; border: 3px solid black; padding: 10px;">

    <h1> Add Manager </h1>
    <% if (errors !=undefined) { %>
        <ul>
            <% errors.forEach((error)=> { %>
                <li>
                    <%= error.msg %>
                </li>
                <% }) %>
        </ul>
        <% } %>

            <form action=<%= "/managers/add/"%> method="POST">
                <label>ID: </label>
                <input type="text" name="mgrid"><br>
                <label>Name: </label>
                <input type="text" name="name"><br>
                <label>Salary: </label>
                <input type="text" name="salary"><br>
                <input type="submit" value="OK">
            </form>
</div>